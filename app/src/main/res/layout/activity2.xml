<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity2">

    <Button
        android:id="@+id/btn5"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="83dp"
        android:background="#EFEFEF"
        android:text="NHÂN"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/TAnswer"
        app:layout_constraintEnd_toStartOf="@+id/btn7"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/Enum2" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="83dp"
        android:background="#EFEFEF"
        android:text="CHIA"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/TAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/Enum2" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="84dp"
        android:background="#EFEFEF"
        android:text="CỘNG"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/TAnswer"
        app:layout_constraintEnd_toStartOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enum2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="83dp"
        android:background="#EFEFEF"
        android:text="TRỪ"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/TAnswer"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/Enum2"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/Enum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:hint="Nhập số thứ nhất"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Enum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:hint="Nhập số thứ hai"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Enum1"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Kết Quả"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/TAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enum2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/TAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCFF"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.602"
        tools:layout_editor_absoluteX="3dp" />
</androidx.constraintlayout.widget.ConstraintLayout>